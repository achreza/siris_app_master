<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/peterriver"
    android:paddingTop="20dp">



        <LinearLayout
            android:layout_below="@id/logo"
            android:id="@+id/email_login_form"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingHorizontal="30dp"
            >



            <android.support.design.widget.TextInputEditText
                android:paddingStart="10dp"
                android:background="@drawable/shapeuserpass"
                android:drawableStart="@drawable/usericon"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/email_login_form"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:ems="10"
                android:hint=" Username"
                android:inputType="textPersonName"
                />

            <EditText
                android:paddingStart="10dp"
                android:background="@drawable/shapeuserpass"
                android:drawableStart="@drawable/passicon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_below="@+id/username"
                android:layout_alignParentLeft="true"
                android:id="@+id/password"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint=" Password"
                android:layout_marginTop="10dp"
                />

            <Button

                android:id="@+id/btnLogin"
                style="?android:textAppearanceSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/shapelogin"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/peterriver"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_below="@id/password"/>




        </LinearLayout>




    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:gravity="center"
        android:background="@color/peterriver">

        <ImageButton
            android:layout_margin="5dp"
            android:id="@+id/user_profile_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/siris"
            android:elevation="3dp" />

    </RelativeLayout>









</RelativeLayout>