<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text=""
            android:textStyle="italic"
            android:textSize="23sp"
            android:textColor="@color/peterriver"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/oldproduct_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/newproduct_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/peterriver"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/sale"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_weight="1"-->
            <!--android:focusable="false"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:src="@drawable/ic_local_grocery_store_24dp"-->
            <!--android:focusableInTouchMode="false"-->
            <!--android:text="@string/sale_button" />-->

            <TextView
                android:id="@+id/rp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="16dp"
                android:text="Harga Lama"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16sp"
                android:gravity="bottom"
                />

            <TextView
                android:id="@+id/oldprice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="4dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16sp"
                android:gravity="bottom"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:text="I"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:gravity="bottom"
                />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Stok Lama"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="13sp"
                android:gravity="bottom"
                />

            <TextView
                android:id="@+id/oldquantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="36sp"
                android:textColor="@color/peterriver"
                android:textColorHighlight="@color/peterriver"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/sale"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_weight="1"-->
            <!--android:focusable="false"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:src="@drawable/ic_local_grocery_store_24dp"-->
            <!--android:focusableInTouchMode="false"-->
            <!--android:text="@string/sale_button" />-->

            <TextView
                android:id="@+id/rpbr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="16dp"
                android:text="Harga Baru"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16sp"
                android:gravity="bottom"
                />

            <TextView
                android:id="@+id/newprice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="4dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16sp"
                android:gravity="bottom"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:text="I"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:gravity="bottom"
                />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Stok Baru"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="13sp"
                android:gravity="bottom"
                />

            <TextView
                android:id="@+id/newquantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="36sp"
                android:textColor="@color/peterriver"
                android:textColorHighlight="@color/peterriver"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>